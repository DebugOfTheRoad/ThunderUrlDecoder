<Page x:Class="Jiuyong.ThunderUrlDecoderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Jiuyong"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="ThunderUrlDecoderPage">
	<Page.CommandBindings>
		<CommandBinding Command="MediaCommands.Play" Executed="Decoder_Executed"></CommandBinding>
	</Page.CommandBindings>
	<Grid>
		<Grid Margin="3">
			<Grid.RowDefinitions>
				<RowDefinition/>
				<RowDefinition/>
			</Grid.RowDefinitions>
			<TextBox TextWrapping="Wrap" Text="{Binding Input}" Grid.Row="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True" AcceptsReturn="True"/>
			<TextBox TextWrapping="Wrap" Text="{Binding Output}" Grid.Row="9" Margin="0,1,0,0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True" AcceptsReturn="True" />
			<Button Content="转换" VerticalAlignment="Center" Width="75" Grid.RowSpan="9" HorizontalAlignment="Center" Command="MediaCommands.Play"/>
		</Grid>

	</Grid>
</Page>
